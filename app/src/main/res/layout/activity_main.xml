<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/layout_marginTop"
    android:layout_margin="@dimen/layout_margin"
    android:paddingTop="@dimen/paddingTop"
    tools:context="firmanmujahidin.com.appintermediate.mainLogin.LoginActivity">

=       <EditText
            android:id="@+id/mTextUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_name" />

        <EditText
            android:id="@+id/mTextPassword"
            android:layout_below="@+id/mTextUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:inputType="textWebPassword"/>

        <Button
            android:id="@+id/mBtnLogin"
            android:layout_below="@id/mTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/marginTop"
            android:text="@string/button" />

</RelativeLayout>
